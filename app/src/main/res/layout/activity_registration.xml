<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegistrationActivity">
    <ImageView
        android:id="@+id/image_register"
        app:layout_constraintVertical_bias="0.05"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHeight_percent="0.7"
        app:layout_constraintWidth_percent="0.9"
        android:src="@drawable/registration"
        android:layout_width="0dp"
        android:layout_height="0dp"/>
    <TextView
        android:id="@+id/text_my"
        android:textSize="@dimen/_20sdp"
        android:text="Ro’yhatdan o’tish"
        app:layout_constraintTop_toBottomOf="@id/image_register"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.08"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.05"
        android:textColor="@color/black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/sign_in"
            android:foreground="?attr/selectableItemBackgroundBorderless"
            android:clickable="true"
            android:elevation="2dp"
            android:background="@drawable/sign_in"
            app:layout_constraintTop_toBottomOf="@id/text_my"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintHeight_percent="0.08"
            app:layout_constraintWidth_percent="0.95"
            app:layout_constraintVertical_bias="0.35"
            android:focusable="true"
            android:layout_width="0dp"
            android:layout_height="0dp">
            <ImageView
                android:id="@+id/google"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintHorizontal_bias="0.6"
                android:src="@drawable/ic_search"
                android:layout_width="25dp"
                android:layout_height="25dp"/>
            <TextView
                android:textColor="@color/black"
                android:text="Sign In"
                android:textSize="@dimen/_16sdp"
                app:layout_constraintTop_toTopOf="@id/google"
                app:layout_constraintBottom_toBottomOf="@id/google"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@id/google"
                app:layout_constraintHorizontal_bias="0.8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>