<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="5dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.cardview.widget.CardView
        android:id="@+id/line"
        app:cardCornerRadius="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:cardUseCompatPadding="true"
        app:layout_constraintVertical_bias="0.5"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="@dimen/_300sdp"
        android:layout_height="@dimen/_300sdp">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/image_phone"
                android:scaleType="centerCrop"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
            <it.emperor.animatedcheckbox.AnimatedCheckBox
                android:id="@+id/animatedcheckbox"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintHorizontal_bias="0.95"
                app:layout_constraintVertical_bias="0.05"
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"
                app:acb_animation_duration="500"
                app:acb_border_checked_color="@color/white"
                app:acb_border_checked_stroke_width="1dp"
                app:acb_border_not_checked_color="#E1DCDC"
                app:acb_checked="false"
                app:acb_circle_color="#1485DF"
                app:acb_hook_color="@color/white"
                app:acb_hook_stroke_width="1dp"
                app:acb_padding="5dp" />

            <at.markushi.ui.CircleButton
                app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.App.CornerSize10Percent1"
                android:id="@+id/send_image"
                android:visibility="invisible"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintVertical_bias="0.95"
                app:layout_constraintHorizontal_bias="0.95"
                app:cb_color="#1485DF"
                android:scaleType="center"
                android:src="@drawable/ic_send"
                android:cropToPadding="true"
                android:layout_width="@dimen/_45sdp"
                android:layout_height="@dimen/_45sdp"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>