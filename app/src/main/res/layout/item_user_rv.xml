<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:foreground="?attr/selectableItemBackgroundBorderless"
    android:clickable="true"
    android:focusable="true"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <com.github.abdularis.civ.CircleImageView
        android:id="@+id/image"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.01"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:src="@drawable/ic_frame_9"
        app:highlightColor="#4ACFCACB"
        app:strokeColor="#CAC6C6"
        app:strokeWidth="2dp"/>
    <TextView
        android:id="@+id/name_user"
        android:maxLines="1"
        app:layout_constraintWidth_percent="0.6"
        android:text="Dostonbek Eshmurodov"
        android:textSize="@dimen/_16sdp"
        app:layout_constraintTop_toTopOf="@id/image"
        android:textStyle="bold"
        android:textColor="@color/black"
        app:layout_constraintBottom_toTopOf="@id/message"
        app:layout_constraintLeft_toRightOf="@id/image"
        app:layout_constraintRight_toLeftOf="@id/time"
        android:layout_width="0dp"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/message"
        app:layout_constraintRight_toRightOf="@id/name_user"
        android:text="dasdfasfsdfdsfdfsadfdsfdsfdsfsfsdffdfdsfd"
        app:layout_constraintTop_toBottomOf="@id/name_user"
        app:layout_constraintLeft_toLeftOf="@id/name_user"
        app:layout_constraintBottom_toBottomOf="@id/image"
        android:maxLines="1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/time"
        app:layout_constraintLeft_toRightOf="@id/image"
        app:layout_constraintHorizontal_bias="0.98"
        android:maxLines="1"
        android:maxLength="5"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/image"
        android:textStyle="normal"
        android:text="10:00"
        app:layout_constraintBottom_toBottomOf="@id/image"
        app:layout_constraintVertical_bias="0.3"
        android:textSize="14sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
</androidx.constraintlayout.widget.ConstraintLayout>